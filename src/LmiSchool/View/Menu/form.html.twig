<div class="form-group {% if error %} has-error {% endif %}">
    <label for="title" class="col-sm-2 control-label">Название</label>
    <div class="col-sm-5">
        <input type="text" name="title" class="form-control" id="title" value="{{ item.title }}" required="required">
    </div>
</div>
<div class="form-group {% if error %} has-error {% endif %}">
    <label for="position" class="col-sm-2 control-label">Позиция в списке</label>
    <div class="col-sm-5">
        <input type="number" name="position" class="form-control" id="position" value="{{ item.position }}" required="required">
    </div>
</div>
<div class="form-group {% if error %} has-error {% endif %}">
    <label for="parent-id" class="col-sm-2 control-label">Родительцкий элемент</label>
    <div class="col-sm-5">
        <input type="number" name="parent_id" class="form-control" id="parent-id" value="{{ item.parentId ?: null }}">
    </div>
</div>
<div class="form-group {% if error %} has-error {% endif %}">
    <label for="route-name" class="col-sm-2 control-label">Название маршрута</label>
    <div class="col-sm-5">
        <input type="text" name="route_name" class="form-control" id="route-name" value="{{ item.routeName ?: null }}">
    </div>
</div>
<div class="form-group {% if error %} has-error {% endif %}">
    <label for="route-options" class="col-sm-2 control-label">Опции маршрута (JSON)</label>
    <div class="col-sm-5">
        <textarea name="route_options" class="form-control" id="route-options">{{ item.routeOptions ? item.routeOptions|json_encode : null }}</textarea>
    </div>
</div>
