{% extends "base.html.twig" %}

{% block content %}
    {% if not news %}
        <div class="alert alert-warning text-center">
            К сожалению мы не смогли ничего найти
        </div>
    {% else %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="text-center text-bold">{{ news.title }}</h3>
            </div>
            <div class="panel-body">
                <div class="clearfix">
                    <div class="pull-left">
                        <img class="img-thumbnail thumb" src="http://www.lmi-school.ru/image/news/{{ news.imageUrl }}">
                    </div>
                    <div class="">
                        <p>{{ news.content|raw }}</p>
                        <div class="pull-right text-muted">
                            <i>{{ news.author|default('Администратор') }}</i>,
                            <i>{{ news.dateShowAfter|date('d.m.Y') }}</i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
